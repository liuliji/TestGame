        },
        "return":[
            {
                "state":"ok"
            }
        ]
    },

    "ID_C2S_TALK":{
        "intro":"在房间说话",
        "params":{
            "content":"msg"
        },
        "intro_params":{
            "content":"说话的内容"
        },
        "return":[
            {
                "state":"ok"
            },
            {
                "state":"error",
                "body":{"reason":"msg"}
            }
        ]
    },

