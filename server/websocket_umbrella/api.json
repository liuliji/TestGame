    "ID_C2S_CREATE_ROOM":{
        "intro":"创建房间",
        "params":{
            // "room_name":"111"
        },
        "intro_params":{
            // "room_id":"房间唯一标识",
            // "title":"房间的名字"
        },
        "return":[
            {
                "state":"ok",
                "body":{
                    "room_id":"asd5f798-asdf",
                    "owner_id":"111"
