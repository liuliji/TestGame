{
    "intro":{
        "url_type":["connect", "join", "C2S", "S2C"],
        "intro_url_type":"接口分为四种，connect:建立socket请求，join:加入channel，C2S:向服务端发消息，S2C:接收服务端消息"
    },

    "/socket":{
        "type":"connect",
        "intro":"建立socket连接。成功之后需要加入大厅房间(room:_hall 接口)",
        "params":{
            "user_id":"123"
        },
        "intro_params":{
            "user_id":"用户唯一标识id"
        },
        "return":[
            {
                "state":"ok"
            },
            {
                "state":"error",
                "body":{"reason":"invalid user_id"}
            }
        ]
    },

    "room:_hall":{
        "type":"join",
        "intro":"加入大厅房间",
        "return":[
            {
                "state":"ok"
            }
        ]
    },

    "ID_C2S_CREATE_ROOM":{
        "intro":"创建房间",
        "params":{
            // "room_name":"111"
        },
        "intro_params":{
            // "room_id":"房间唯一标识",
            // "title":"房间的名字"
        },
        "return":[
            {
                "state":"ok",
                "body":{
                    "room_id":"asd5f798-asdf",
                    "owner_id":"111"
                },
                "intr_body":{
                    "room_id":"房间唯一标识",
                    "owner_id":"房主uid"
                }
            },
            {
                "state":"error",
                "body":{"reason":"msg"}
            }
        ]
    },

    "ID_C2S_DELETE_ROOM":{
        "intro":"删除房间",
        "params":{
            "room_id":"asdf-fdaf"
        },
        "intro_params":{
            "room_id":"房间唯一标识"
        },
        "return":[
            {
                "state":"ok"
            }
        ]
    },

    "ID_C2S_TALK":{
        "intro":"在房间说话",
        "params":{
            "content":"msg"
        },
        "intro_params":{
            "content":"说话的内容"
        },
        "return":[
            {
                "state":"ok"
            },
            {
                "state":"error",
                "body":{"reason":"msg"}
            }
        ]
    },

    "talk":{
        "type":"S2C",
        "intro":"有人在房间说话",
        "params":{
            "user_id":"123",
            "content":"msg"
        },
        "intro_params":{
            "user_id":"用户id",
            "content":"说话的内容"
        },
        "return":[
            {
                "state":"ok"
            }
        ]
    }

}