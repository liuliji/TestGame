{
    "intro":{
        "url_type":["connect", "join", "C2S", "S2C"],
        "intro_url_type":"接口分为四种，connect:建立socket请求，join:加入channel，C2S:向服务端发消息，S2C:接收服务端消息"
    },

    "/socket":{
        "type":"connect",
        "intro":"建立socket连接。成功之后需要加入大厅房间(room:_hall 接口)",
        "params":{
            "user_id":"123"
        },
        "intro_params":{
            "user_id":"用户唯一标识id"
        },
        "return":[
            {
                "state":"ok"
            },
            {
                "state":"error",
                "body":{"reason":"invalid user_id"}
            }
        ]
    },

    "room:_hall":{
        "type":"join",
        "intro":"加入大厅房间",
        "return":[
            {
                "state":"ok"
            }
        ]
    },

    "create_room":{
        "type":"C2S",
        "intro":"创建房间",
        "params":{
            "room_id":"111",
            "title":"大家来玩啊"
        },
        "intro_params":{
            "room_id":"房间唯一标识",
            "title":"房间的名字"
        },
        "return":[
            {
                "state":"ok"
            },
            {
                "state":"error",
                "body":{"reason":"msg"}
            }
        ]
    },

    "delete_room":{
        "type":"C2S",
        "intro":"删除房间",
        "params":{
            "room_id":"111"
        },
        "intro_params":{
            "room_id":"房间唯一标识"
        },
        "return":[
            {
                "state":"ok"
            }
        ]
    },

    "bc:talk":{
        "type":"C2S",
        "intro":"在房间说话",
        "params":{
            "content":"msg"
        },
        "intro_params":{
            "content":"说话的内容"
        },
        "return":[
            {
                "state":"ok"
            },
            {
                "state":"error",
                "body":{"reason":"msg"}
            }
        ]
    },

    "talk":{
        "type":"S2C",
        "intro":"有人在房间说话",
        "params":{
            "content":"msg"
        },
        "intro_params":{
            "content":"说话的内容"
        },
        "return":[
            {
                "state":"ok"
            }
        ]
    }

}